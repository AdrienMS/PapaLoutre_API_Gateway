{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-console" : [
            "error",
            {
                "allow" : ["warn", "error", "info"]
            }
        ],
        "prefer-destructuring": "off",
        "linebreak-style": ["error", "unix"],
        "no-else-return": 0
    },
    "plugins": ["import"]
}